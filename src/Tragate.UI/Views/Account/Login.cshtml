@model Tragate.UI.Models.User.LoginViewModel 
@{ ViewData["Title"] = "Login Page"; Layout = "~/Views/Shared/_AccountLayout.cshtml"; }

<div id="login">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">TR+</h1>
            </div>
            <h3>Welcome to Tragate Admin Panel</h3>
            <p>Login in. To see it in action.</p>
            <form id="loginForm" class="m-t">
                <vcsummary></vcsummary>
                <div id="result"></div>
                <div class="form-group">
                    <input name="Email" type="text" class="form-control" placeholder="Email" required>
                </div>

                <div class="form-group">
                    <input name="Password" type="password" class="form-control" placeholder="Password" required>
                </div>

                <button type="submit" id="btnLogin" class="btn btn-primary block full-width m-b">Login</button>
            </form>
            <p class="m-t"> <small>Tragate Bilgi Teknolojileri A.Åž. &copy; 2018</small> </p>
        </div>
    </div>
</div>

@section scripts {
<script src="~/assets/app-js/login.js" asp-append-version="true"></script>
}