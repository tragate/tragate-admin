@model Tragate.UI.Models.Company.CompanyProductListViewModel

<style>
    table tr td {
        text-align: center;
    }
</style>

<script src="~/assets/app-js/company-product-inside.js" asp-append-version="true"></script>

<table class="table">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Ürün Adı</th>
            <th>Ekleyen Kullanıcı</th>
            <th>Durumu</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CompanyProductList)
        {
            <tr>
                <td>
                    <img src="@item.ListImagePath" alt="@item.ProductTitle" style="width:80px;" />
                </td>
                <td>@item.ProductTitle</td>
                <td>@item.CreatedUser</td>
                <td>@item.Status</td>
                <td>@string.Format("{0: dd.MM.yyyy}", item.CreatedDate)</td>
                <td>
                    <a href="@Model.WebsiteUrl/product/@item.ProductSlug" target="_blank" class="btn btn-primary">Git</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<cs-pager cs-paging-pagesize="5"
          cs-paging-pagenumber="@Model.PageNumber"
          cs-paging-totalitems="@Model.TotalCount"
          cs-pagenumber-param="page"
          asp-controller="Company"
          asp-action="GetCompanyProducts"></cs-pager>
