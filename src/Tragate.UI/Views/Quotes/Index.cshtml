@model Tragate.UI.Models.Quotation.QuotationListViewModel
@{ ViewData["Title"] = "Teklifler"; }


<div>
    <hr />

    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Teklif listesi</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="scroll_content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="row" style="padding:15px;">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="col-form-label" for="status">Teklif Durumu</label>
                                            <select name="quoteStatus" id="quoteStatus" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-4">
                                        @*<form>
                                            <div class="form-actions no-color">
                                                <div id="custom-search-input">
                                                    <div class="input-group col-md-12">
                                                        <input type="text" id="txtSearch" value="@Model.SearchKey" class="form-control" placeholder="Tekliflerde Ara">
                                                        <span class="input-group-btn">
                                                            <button id="searchBtn">
                                                                <span class="glyphicon glyphicon-search"></span>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>*@
                                    </div>
                                </div>
                                <table class="table table-striped text-center">
                                    <thead>
                                    <tr>
                                        <th>
                                            İşlemler
                                        </th>
                                        <th>
                                            Teklif No
                                        </th>
                                        <th>
                                            Alıcı
                                        </th>
                                        <th>
                                            Alıcı Email
                                        </th>
                                        <th>
                                            Alıcı Durumu
                                        </th>
                                        <th>
                                            Satıcı
                                        </th>
                                        <th>
                                            Satıcı Email
                                        </th>
                                        <th>
                                            Satıcı Durumu
                                        </th>
                                        <th>
                                            Sipariş Durumu
                                        </th>
                                        <th>
                                            Oluşturulma Tarihi
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model.QuotationList)
                                    {
                                        <tr>
                                            <td>
                                                <a title="Details"
                                                   class="btn btn-warning btn-xs quoteDetail"
                                                   data-url="quotes/quote-details/@item.Id" data-title="Teklif Detay" data-toggle="modal" data-target="#quoteDetailModal-lg">
                                                    <i class="fa fa-angle-double-right"></i> Detay
                                                </a>
                                            </td>
                                            <td>@item.Id</td>
                                            <td>@item.BuyerUserFullName</td>
                                            <td>@item.BuyerUserEmail</td>
                                            <td>@item.BuyerContactStatus</td>
                                            <td>@item.SellerUserFullName</td>
                                            <td>@item.SellerUserEmail</td>
                                            <td>@item.SellerContactStatus</td>
                                            <td>@item.OrderStatus</td>
                                            <td>@item.CreatedDate</td>
                                        </tr>

                                    }
                                    </tbody>
                                </table>
                            </div>

                            <cs-pager cs-paging-pagesize="10"
                                      cs-paging-pagenumber="@Model.PageNumber"
                                      cs-paging-totalitems="@Model.TotalCount"
                                      cs-pagenumber-param="page" ,
                                      asp-route-searchKey="@Model.SearchKey"
                                      asp-controller="Quotes"
                                      asp-action="Index">
                            </cs-pager>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_PopupQuoteDetail")

@section Scripts {
    <script src="~/assets/app-js/quotes.js" asp-append-version="true"></script>
    <link href="~/assets/css/custom-css/custom-search.css" rel="stylesheet" />
}